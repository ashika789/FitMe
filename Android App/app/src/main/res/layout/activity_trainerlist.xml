<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackgt.com.fitme.trainerlist"
    android:id="@+id/trainerlist"
    android:background="@drawable/bg23">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Available Trainers"
            android:id="@+id/trainers"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ethan"
                android:onClick="trainerOne" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ethan Hawke"
                    android:id="@+id/name1"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_alignEnd="@+id/trainers"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Specializing in weight loss, muscle toning, &amp; agility/strength.                  $75/month"
                    android:id="@+id/textView"
                    android:layout_below="@+id/name1"
                    android:layout_toEndOf="@+id/imageView2" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:rating="4.5"
                    android:layout_above="@+id/imageView4"
                    android:layout_alignEnd="@+id/textView"
                    android:isIndicator="true"
                    android:clickable="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView4"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/jessica"
                android:onClick="trainerTwo" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Jessica Lange"
                    android:id="@+id/name2"
                    android:layout_alignStart="@+id/name1"
                    android:layout_alignEnd="@+id/name1"
                    android:layout_alignTop="@+id/imageView4"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Toning, shaping, Zumba , &amp; Yoga.                                                  $35/session"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/name2"
                    android:layout_alignStart="@+id/textView" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:rating="4"
                    android:layout_above="@+id/name3"
                    android:layout_alignStart="@+id/textView3"
                    android:isIndicator="true"
                    android:clickable="false" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="44dp"
                android:src="@drawable/jason"
                android:onClick="trainerThree" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Jason Momoa"
                    android:id="@+id/name3"
                    android:layout_alignEnd="@+id/trainers"
                    android:layout_alignTop="@+id/imageView5"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Body building &amp; power lifting.                  $149/month"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/name3"
                    android:layout_alignStart="@+id/ratingBar2" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar3"
                    android:rating="5"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/imageView5"
                    android:isIndicator="true"
                    android:clickable="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
