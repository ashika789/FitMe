<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackgt.com.fitme.BMIScreen"
    android:background="@drawable/bg23">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Your BMI is"
    android:id="@+id/bmiValue"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/takeQuiz" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="TBA"
    android:id="@+id/bmiTextView"
    android:singleLine="true"
    android:layout_below="@+id/bmiValue"
    android:layout_centerHorizontal="true"
    android:textStyle="bold" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:src="@drawable/bmichart"
    android:layout_below="@+id/bmiTextView"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="This means you are "
    android:id="@+id/result"
    android:layout_below="@+id/imageView"
    android:layout_alignStart="@+id/textView6" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="RESULTSBMI"
    android:id="@+id/resultbmi"
    android:layout_alignTop="@+id/result"
    android:textStyle="bold"
    android:layout_alignParentEnd="true"
    android:gravity="left" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Hmm..let&apos;s get to know you better!"
    android:id="@+id/textView6"
    android:layout_gravity="center"
    android:textStyle="italic"
    android:layout_above="@+id/takeQuiz"
    android:layout_alignParentEnd="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Take the Quiz"
    android:id="@+id/takeQuiz"
    android:layout_marginBottom="38dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:onClick="takeQuiz" />

</RelativeLayout>
